module.exports.config = {
	name: "goadminn",
	version: "1.0.0",
	role: 0,
	credits: "TCG",
	description: "Bot will automatically reply when the admin is tagged.,
	usages: "",
	hasPrefix: true,
	cooldown: 5
};

module.exports.handleEvent = function({ api, event }) {
	if (event.senderID !== "100074830335198" && event.mentions) {
		var aid = ["100074830335198"];
		for (const id of aid) {
			if (event.mentions[id]) {
				var msg = [
					"Babe nalang itawag mo sakanya",
					"Stop mentioning my creator, he's busy 😗",
					"My Creator is currently offline 😢",
					"𝖠𝗇𝗈𝗍𝗁𝖾𝗋 𝗍𝖺𝗀 𝗂𝗇 𝗆𝗒 𝖺𝖽𝗆𝗂𝗇, 𝗂 𝗐𝗂𝗅𝗅 𝗉𝗎𝗇𝖼𝗁 𝗒𝗈𝗎 🙂",
					"busy pa ata yun kaya mag-antay ka",
					"Sorry, naka bebetime pa don't disturb him 🙄",
					"Do you like my creator that's why you're tagging him? Why don't you add him https://www.facebook.com/TCG.main 😏",
					" Another tag in my Creator, I will kick your fucking ass"
				];
				api.setMessageReaction("😍", event.messageID, (err) => {}, true);
				return api.sendMessage({body: msg[Math.floor(Math.random()*msg.length)]}, event.threadID, event.messageID);
			}
		}
	}
};

module.exports.run = async function({}) {
};
